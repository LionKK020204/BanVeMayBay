@model BanVeMayBay.Models.order
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layOutSite.cshtml";
}
<section class="booking">
    <div class="container bg-white" style="margin-bottom:50px">
        <div class="row">
            <div class="col-md-8">
                <div class="booking-confirmed booking-outer">
                    <div class="confirmation-title">
                        <div class="form-title form-title-1">
                            <h2 class="text-danger">Bạn đã đạt vé thành công</h2>
                        </div>
                        <p class="text-success">Thông tin chi tiết của vé đã được gửi về tài khoản Email của bạn</p>
                        <div class="payment-info detail">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="confirmation-details detail">
                                        <h3>Vé của bạn</h3>
                                        <table>
                                            <tbody>
                                                <tr>
                                                    <td class="title">Mã vé</td>
                                                    <td class="b-id">@Model.ID</td>
                                                </tr>
                                                <tr>
                                                    <td class="title">Tên khách hàng</td>
                                                    <td>@Model.name </td>
                                                </tr>
                                                <tr>
                                                    <td class="title">Email</td>
                                                    <td>@Model.email</td>
                                                </tr>
                                                <tr>
                                                    <td class="title">Số điện thoại</td>
                                                    <td>@Model.phone</td>
                                                </tr>
                                                <tr>
                                                    <td class="title">Số lượng</td>
                                                    <td>@Model.guestTotal</td>
                                                </tr>
                                                <tr>
                                                    <td class="title">Giới tính</td>
                                                    <td>@Model.gioitinh</td>
                                                </tr>
                                                <tr>
                                                    <td class="title">Quốc tịch</td>
                                                    <td>@Model.quoctich</td>
                                                </tr>
                                               
                                                <tr>
                                                    <td class="title">Ngày tạo vé</td>
                                                    <td>@Model.created_ate.ToString("dd/MM/yyyy")</td>
                                                </tr>
                                                <tr>
                                                    <td class="title">Tổng tiền:</td>
                                                    <td><h4 class="text-danger"> @Model.total.ToString("N0") VNĐ</h4></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                   
                </div>
            </div>
            <div class="col-md-12">
                <h3>Thông tin chi tiết vé</h3>
                @Html.Action("_BookingConnfig", "Checkout", new { orderId = Model.ID })
                <h3 style="color:red;"> Tổng tiền: @Model.total.ToString("N0") VNĐ</h3>
            </div>
        </div>
    </div>
</section>