<section class="login-block">
    <form action="Login" method="post">
        <div class="container">
            @Html.Partial("_MessgeAlert")
            <div class="row">
                <div class="col-md-4 login-sec">
                    <h2 class="text-center">Login Now</h2>
                    <h4 style="color:darkred">Vui lòng đăng nhập để có thể mua vé hoặc thanh toán </h4>
                    <form class="login-form">
                        <div class="form-group">
                            <label for="exampleInputEmail1" class="text-uppercase">Tên đăng nhập</label>
                            <input type="text" class="form-control" name="username">

                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1" class="text-uppercase">Mật khẩu</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <span class="text-danger">@ViewBag.error</span>

                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input">
                                <small>Nhớ mật khẩu</small>
                            </label>
                            <div>
                                <button type="submit" class="btn-blue btn-red btn-style-1 pt-2">Đăng nhập</button>
                            </div>
                        </div>

                    </form>

                </div>
                <div class="col-md-8 banner-sec">


                    <div>
                        <div>
                            <img class="d-block img-fluid" src="~/Public/images/flight/login.jpg" width="650" height="400">                        
                        </div>

                    </div>


                </div>
            </div>
        </div>
    </form>

</section>
