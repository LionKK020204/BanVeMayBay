
@{
    ViewBag.Title = "register";
    Layout = "~/Views/Shared/_layOutSite.cshtml";
}
<section class="">
    <div>
        <form action="" method="post">
            <div class="container bg-light">
                @Html.Partial("_MessgeAlert")
                <div class="row bg-light" style="background-color:#fff;display:flex;justify-content:center;padding-top:30px;margin-bottom:100px">
                    
                    <div class="form-group col-md-6 col-xs-12">
                        <h2 style="color:blue;display:flex;justify-content:center">Đăng kí</h2>
                        <div>
                            <label for="email">Tên khoản</label>
                            <input style="margin-bottom:20px; border-color: rgb(7, 187, 247); border-bottom: 2px solid #000; " class="mb-0 form-control" type="text" placeholder="Tên tài khoản" name="uname" required>
                            <span class="text-danger">@ViewBag.error</span>
                        </div>
                        <div>
                            <label for="fullname">Tên đầy đủ</label>
                            <input style="margin-bottom:20px; border-color: rgb(7, 187, 247); border-bottom: 2px solid #000; " type="text" class="mb-0 form-control" placeholder="Tên đầy đủ" name="fname" required>
                        </div>
                        <div>
                            <label for="email">Email</label>
                            <input style="margin-bottom:20px; border-color: rgb(7, 187, 247); border-bottom: 2px solid #000; " class="mb-0 form-control" type="email" id="email" name="email" placeholder="Email" required>
                        </div>
                        <div>
                            <label for="email">Số điện thoại</label>
                            <input style="margin-bottom:20px; border-color: rgb(7, 187, 247); border-bottom: 2px solid #000; " class="mb-0 form-control" type="tel" name="phone" placeholder="Số điện thoại" required
                                   pattern="[0-9]{3}[0-9]{3}[0-9]{4}">
                            <span asp-validation-for="phone" class="text-danger"></span>
                        </div>
                        <div>
                            <label for="email">Địa chỉ</label>
                            <input style="margin-bottom:20px; border-color: rgb(7, 187, 247); border-bottom: 2px solid #000; " class="mb-0 form-control" type="text" name="address" placeholder="Địa chỉ" required>
                        </div>
                        <div>
                            <label for="password">Mật khẩu</label>
                            <input style="margin-bottom:20px; border-color: rgb(7, 187, 247); border-bottom: 2px solid #000; " class="mb-0 form-control" type="password" name="psw" id="password" placeholder="Mật khẩu" required>
                        </div>
                        <div>
                            <label for="password">Nhập lại mật khẩu</label>
                            <input style="margin-bottom:20px; border-color: rgb(7, 187, 247); border-bottom: 2px solid #000; " class="mb-0 form-control" type="password" id="repeat-password" name="repsw" placeholder="Nhập lại mật khẩu" required>
                        </div>

                        <span class="text-danger">@ViewBag.error</span>
                        <button style="margin-top:20px;float:right;" class="btn-blue btn-red btn-style-1 pt-2" type="submit">Đăng ký</button>
                    </div>
                    @*<div class="col-md-6">
                        <div>
                            <img style="width: 100%;height: 500px" class="d-block img-fluid imgregister" onerror="this.style.display='none'" src="~/Public/images/flight/register1.jpg"  />

                        </div>
                    </div>*@
                </div>
            </div>

        </form>
    </div>
</section>
