@model IEnumerable<BanVeMayBay.Models.ticket> 

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layOutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<style>
    .container_button-header {
        width: 100%;
        display: flex;
        justify-content: flex-end;
    }

    .container_form-header-button {
        margin-left: 10px;
    }

    .container_form-header-add {
        background-color: #28a745;
        border: none;
        border-radius: 4px;
        color: #fff;
        height: 34px;
        margin-right10px;
    }

    .container_form-header-cancel {
        border: none;
        border-radius: 4px;
        color: #fff;
        height: 34px;
        background-color: #dc3545;
    }

    .container_form-header-add:hover {
        background-color: rgb(47, 239, 82);
    }

    .container_form-header-cancel:hover {
        background-color: rgb(240, 90, 90);
    }
</style>
<div class="card card-title bg-white p-1">
    <div class="row">
        <div class="col-md-6 "> <h5 class="pl-2 mt-2 text-blues">Quản lí vé máy bay </h5> </div>
        <div class="col-md-6 m-0">
            <ol class="breadcrumb bg-white float-sm-right m-0">
                <li class="breadcrumb-item m-0"><a href="~/Admin">Trang chủ</a></li>
                
            </ol>
        </div>
    </div>
</div>



<section class="">
    <div class=" bg-white card  p-3">
        @*<a href="~/Areas/Admin/Views/Tickets/Edit.cshtml">~/Areas/Admin/Views/Tickets/Edit.cshtml</a>*@
        @*<div class="row justify-content-end">
            <div class="col-md-4">
                <div class=" pt-1 ml-5">
                    <a class="text-white btn-sm btn-success btn-custom mr-1 ml-1" href="~/admin/Tickets/Create">Thêm vé <i class="fas fa-plus"></i></a>
                    <a class="text-white btn-sm btn-danger btn-custom" href="~/admin/Tickets/trash">Vé đã hủy<i class="fas fa-trash"></i></a>

                </div>
            </div>
        </div>*@
        <div class="container_button-header">
            <div class="container_form-header-button">
                <a href="~/admin/Tickets/Create">
                    <button class="container_form-header-add">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                        Thêm vé
                    </button>
                </a>

            </div>
            <div class="container_form-header-button">
                <a href="~/admin/Tickets/trash">
                    <button class="container_form-header-cancel">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                        Vé đã xóa
                    </button>
                </a>

            </div>
        </div>
        <div class="row">
            <div class="col-md-9  w-100 ">
                @Html.Partial("_MessgeAlert")
            </div>
            <div class="col-md-12 p-3">

                <table id="myTable1" class="table  table-striped table-bordered dt-responsive nowrap">
                    <thead>

                        <tr>
                            <th>Id</th>
                            <th>Hãng vé</th>
                            <th>Nơi đến</th>
                            <th>Nơi đi</th>
                            <th>Ngày bay</th>
                            <th>Giá vé</th>
                            <th>Số chỗ ngồi còn lại</th>
                            <th>Tác vụ</th>

                        </tr>

                    </thead>
                    <tbody>


                        @foreach (var item in Model)
                        {
                            string name = item.name;
                            <tr>
                                <td class="text-cam">@item.id</td>
                                <td><img width="40" src="~/public/images/flight/@item.airline"></td>
                                <td>
                                    @item.city.cityName
                                </td>
                                <td width="15%">  @item.city1.cityName</td>
                                <td style="font-size:14px;">@item.departure_date.Value.ToString("dd/MM/yyyy")</td>
                                <td style="font-size:14px;">@item.price.Value.ToString("N0") VNĐ</td>
                                <td style="font-size:14px;">Số chỗ @item.guestTotal - đã đặt @item.Sold</td>
                                <td>
                                    @if (item.status == 1)
                                    {
                                        <a class="btn btn-sm btn-light btn-custom text-success border a33" href="@Url.Action("Status", "Tickets", new { id = item.id })"> <i class="fas fa-toggle-on"></i> </a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-sm btn-light btn-custom text-danger border a33" href="@Url.Action("Status", "Tickets", new { id = item.id })"> <i class="fas fa-toggle-off"></i> </a>
                                    }


                                    @if (item.Sold == 0 || item.status == 0)
                                    {
                                        <a class="btn btn-sm btn-light text-danger btn-custom mr-1 ml-1 border" href="@Url.Action("Deltrash", "Tickets", new { id = item.id})">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>

                                    }
                                    <a class="btn btn-sm btn-light btn-custom text-warning border" href="@Url.Action("Edit", "Tickets", new { id = item.id })">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>

                            </tr>

                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</section>