@model BanVeMayBay.Models.city
@{
    ViewBag.Title = "CreateCities";
    Layout = "~/Areas/Admin/Views/Shared/_layOutAdmin.cshtml";
}

<div class="card card-title bg-white p-1">
    <div class="row">
        <div class="col-md-6 "> <h5 class="pl-2 mt-2 text-blues">Quản lí sân bay</h5> </div>
        <div class="col-md-6 m-0">
            <ol class="breadcrumb bg-white float-sm-right m-0">
                <li class="breadcrumb-item"><a href="/Admin/Airport">Trở về</a></li>
                <li class="breadcrumb-item active">Quản lí Sân bay</li>
            </ol>
        </div>
    </div>
</div>

<section class="card card-title bg-white p-1">
    @Html.Partial("_MessgeAlert")
    <div class="container bg-white pt-4 " style="margin-bottom:50px">

        @using (Html.BeginForm("CreateCities", "Airport", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class=" row ">
                <div class="col-md-4">  </div>
                <div class="col-md-4"> <h3 class="text-center font-weight-bold text-success ">Thêm sân bay</h3> </div>
                <div class="col-md-4 ">
                    <div class="float-right">
                        <button class="btn btn-sm bg-success btn-custom mr-1 ml-1 text-white"><i class="far fa-save"></i>Lưu</button>
                        <a href="~/admin/Airport" class="btn btn-sm bg-danger btn-custom  text-white "><i class="far fa-window-close"></i>Hủy</a>
                    </div>
                </div>
            </div>
            <div class=" row ">
                <div class="col-md-10">
                    <div>
                        <label for="psw"><span class="text-secondary font-weight-bold">Tên thành phố(Sân bay)</span></label>
                        <input type="text" name="cityName" class="form-control" value="" required />
                    </div>
                    <div>
                        <label for="psw"><span class="text-secondary font-weight-bold">Tên quốc gia</span></label>
                        <select name="countryId" class="selectpicker form-control mt-0" style="margin-top: 0; " tabindex="1" required>

                            @foreach (var item in ViewBag.countries)
                            {
                                <option value="@item.countryId">@item.countryName</option>
                            }

                        </select>
                    </div>
                    <div>
                        <label for="psw"><span class="text-secondary font-weight-bold">Trạng thái</span></label>
                        <select name="status" class="selectpicker form-control" tabindex="1">
                            <option value="1">Hiện</option>
                            <option value="2">Ẩn</option>
                        </select>
                    </div>
                </div>


            </div>
        }
    </div>
</section>