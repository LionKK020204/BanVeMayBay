@model IEnumerable<BanVeMayBay.Models.city> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layOutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->

<style>
    .container_button-header {
        width: 100%;
        display: flex;
        justify-content: flex-end;
    }

    .container_form-header-button {
        margin-left: 10px;
    }

    .container_form-header-add {
        background-color: #28a745;
        border: none;
        border-radius: 4px;
        color: #fff;
        height: 34px;
        margin-right:10px;
    }

    .container_form-header-cancel {
        border: none;
        border-radius: 4px;
        color: #fff;
        height: 34px;
        background-color: #dc3545;
    }

    .container_form-header-add:hover {
        background-color: rgb(47, 239, 82);
    }

    .container_form-header-cancel:hover {
        background-color: rgb(240, 90, 90);
    }
</style>
<div class="card card-title bg-white p-1">
    <div class="row">
        <div class="col-md-6 "> <h5 class="pl-2 mt-2 text-blues">Quản lí sân bay </h5> </div>
        <div class="col-md-6 m-0">
            <ol class="breadcrumb bg-white float-sm-right m-0">
                <li class="breadcrumb-item m-0"><a href="~/Admin">Trang chủ</a></li>

            </ol>
        </div>
    </div>
</div>
<section class="">
    <div class=" bg-white card  p-3">
        @*<div class="row justify-content-end">
            <div class="col-md-3">
                <div class=" pt-1 ml-9">
                    <a class="text-white btn-sm btn-success btn-custom mr-1 ml-1" href="~/admin/Airport/Create">Thêm quốc gia<i class="fas fa-plus"></i></a>
                    <a class="text-white btn-sm btn-success btn-custom mr-1" href="~/admin/Airport/CreateCities">Thêm sân bay<i class="fas fa-plus"></i></a>
                    <a id="myButton" class="text-white btn-sm btn-danger btn-custom" href="~/admin/Airport/trash">Sân bay đã xóa<i class="fas fa-trash"></i></a>

                </div>
            </div>
        </div>*@
        <div class="container_button-header">
        <div class="container_form-header-button">
            <a href="~/admin/Airport/Create">
                <button class="container_form-header-add">
                    <i class="fa fa-plus" aria-hidden="true"></i>
                    Thêm quốc gia
                </button>
            </a>

        </div>
        <div class="container_form-header-button">
            <a href="~/admin/Airport/CreateCities">
                <button class="container_form-header-add">
                    <i class="fa fa-plus" aria-hidden="true"></i>
                    Thêm sân bay
                </button>
            </a>

        </div>
        <div class="container_form-header-button">
            <a href="~/admin/Airport/trash">
                <button class="container_form-header-cancel">
                    <i class="fas fa-trash" aria-hidden="true"></i>
                    Sân bay đã xóa
                </button>
            </a>

        </div>
    </div>
        <div class="row">
            <div class="col-md-9  w-100 ">
                @Html.Partial("_MessgeAlert")
            </div>
            <div class="col-md-12 p-3">

                <table id="myTable1" class="table  table-striped table-bordered dt-responsive nowrap">
                    <thead>

                        <tr>
                            <th>Quốc gia</th>
                            <th>Thành phố</th>                            
                            <th>Tác vụ</th>
                            <th>Id</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        { 
                        <tr>
                            <td style="font-size:14px;">@item.country.countryName</td>                          
                                <td style="font-size:14px;">@item.cityName</td>
                                <td>
                                    @if (item.status == 1)
                                    {
                                        <a class="btn btn-sm btn-light btn-custom mr-1 ml-1 text-success border a33" href="@Url.Action("Status", "Airport", new { id = item.cityId })"> <i class="fas fa-toggle-on"></i> </a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-sm btn-light btn-custom mr-1 ml-1 text-danger border a33" href="@Url.Action("Status", "Airport", new { id = item.cityId})"> <i class="fas fa-toggle-off"></i> </a>
                                    }
                                    <a class="btn btn-sm btn-light text-danger btn-custom  border" href="@Url.Action("Deltrash", "Airport", new { id = item.cityId})"> <i class="fas fa-trash-alt"></i></a>

                                </td>
                                <td class="text-cam">@item.cityId</td>
                            
                        </tr>

                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</section>