@model IEnumerable<BanVeMayBay.Models.user>

@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .container_button-header {
        width: 100%;
        display: flex;
        justify-content: flex-end;
    }

    .container_form-header-button {
        margin-left: 10px;
    }



    .container_form-header-cancel {
        border: none;
        border-radius: 4px;
        color: #fff;
        height: 34px;
        background-color: #dc3545;
    }

    

    .container_form-header-cancel:hover {
        background-color: rgb(240, 90, 90);
    }
</style>
<div class="card card-title bg-white p-1">
    <div class="row">
        <div class="col-md-6 "> <h5 class="pl-2 mt-2 text-blues">Người dùng đã xóa</h5> </div>
        <div class="col-md-6 m-0">
            <ol class="breadcrumb bg-white float-sm-right m-0">
                <li class="breadcrumb-item m-0"><a href="~/Admin">Trang chủ</a></li>
                <li class="breadcrumb-item active m-0">Nguời dùng đã xóa</li>
            </ol>
        </div>
    </div>
</div>
 
    <section class=" ">
        <div class=" bg-white card  p-3">
            @*<div class="row justify-content-end">
            <div class="col-md-4">
                <div class=" pt-1 ml-5">

                    <a class="text-white btn-sm btn-danger btn-custom" href="~/Admin/User">Hủy<i class="fas fa-trash"></i></a>
                </div>
            </div>
        </div>*@
            <div class="container_button-header">
                
                <div class="container_form-header-button">
                    <a href="~/Admin/User">
                        <button class="container_form-header-cancel">
                            <i class="fa fa-reply"" aria-hidden="true"></i>
                           Quay về
                        </button>
                    </a>

                </div>
            </div>
            <div class="row">
                <div class="col-md-9  w-100 ">
                    @Html.Partial("_MessgeAlert")
                </div>
                <div class="col-md-12 p-3">

                    <table class="table px-3 table-striped table-bordered dt-responsive nowrap">
                        <thead>
                            <tr>
                                <th>Tên tài khoản</th>
                                <th>Email</th>
                                <th>Ngày tạo</th>
                                <th>Tác vụ</th>
                                <th>ID</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><a class=" font-weight-bold card-link " href=""> @Html.DisplayFor(modelItem => item.fullname)</a></td>
                                    <td> @Html.DisplayFor(modelItem => item.email)</td>
                                    <td style="font-size:14px;">@item.created_at.ToString("dd/MM/yyyy hh:mm tt")</td>
                                    <td>
                                        <a class="btn btn-sm btn-light text-success btn-custom mr-1 ml-1 border" href="@Url.Action("Retrash", "user", new { id = item.ID })"> <i class="fas fa-undo"></i></a>
                                        <a id="myButton" class="btn btn-sm btn-light text-danger btn-custom border " href="@Url.Action("deleteTrash", "user", new { id = item.ID })">
                                            <button id="myButton">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </a>
                                    </td>
                                    <td class="text-cam ">@Html.DisplayFor(modelItem => item.ID)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
    <script>
        $("#user").addClass("active");
    </script>
