@model IEnumerable<BanVeMayBay.Models.order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layOutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->

<div class="card card-title bg-white p-1">
    <div class="row">
        <div class="col-md-6 "> <h5 class="pl-2 mt-2 text-blues">Xóa vé đã mua</h5> </div>
        <div class="col-md-6 m-0">
            <ol class="breadcrumb bg-white float-sm-right m-0">
                <li class="breadcrumb-item m-0"><a href="~/Admin">Trang chủ</a></li>
                <li class="breadcrumb-item active m-0">Xóa vé đã mua</li>
            </ol>
        </div>
    </div>
</div>



<section class="">
    <div class=" bg-white card  p-3">
        <div class="row justify-content-end">
            <div class="col-md-3">
                <div class=" pt-1 ml-5 float-lg-right">
                    <a class="text-white btn-sm btn-danger btn-custom mr-1 ml-1 " href="~/admin/Orders"><i class="fa fa-reply" aria-hidden="true"></i> Quay về</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9  w-100 ">
                @Html.Partial("_MessgeAlert")
            </div>
            <div class="col-md-12 p-3">

                <table id="myTable1" class="table  table-striped table-bordered dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>Khách hàng</th>
                            <th>Email</th>
                     
                            <th>Ngày tạo</th>
                            <th>Trạng thái</th>
                            <th>Tác vụ</th>
                            <th>ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                        <tr>

                            <td>@item.name</td>
              
                            <td style="font-size:14px;">@Html.DisplayFor(modelItem => item.email)</td>

                            <td>
                                @item.created_ate
                            </td>
                            <td>
                                @item.status
                            </td>
                            <td>
                                <a class="btn btn-sm btn-light text-dark btn-custom mr-1 ml-1 border" href="@Url.Action("Retrash", "Orders", new { id = item.ID })"> <i class="fas fa-undo"></i></a>
                                <a id="myButton" class="btn btn-sm btn-light text-danger btn-custom  border" href="@Url.Action("deleteTrash", "Orders", new { id = item.ID })">
                                    <i class="fas fa-trash-alt"></i>
                                </a>    
                            </td>
                            <td class="text-cam">@Html.DisplayFor(modelItem => item.ID)</td>
                        </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</section>